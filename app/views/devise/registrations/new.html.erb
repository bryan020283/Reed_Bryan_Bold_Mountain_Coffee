<center>
  <div class = "jumbotron devise">
    <center>
    <h2 class = "sign_in">You're one step away from your coffee waiting your arrival!</br>
      Enter your details to register
    </h2>
</br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class = "row">
        <div class = "col-md-6">
          <div class="field">
            <%= f.label :name, "Full Name:", :class => "pull-left" %><br />
            <%= f.text_field :name, autofocus: true, :class => "form-control dev" %>
          </div>
        </div>
        <div class = "col-md-6">  
          <div class="field">
            <%= f.label :emails, "Email Address: (used to sign in)", :class => "pull-left" %><br />
            <%= f.email_field :email, :class => "form-control dev"%>
          </div>
        </div>
      </div>
    </br>
      <div class = "row">
        <div class = "col-md-6">
          <div class="field">
            <%= f.label :password, "Password: (6 characters or longer)", :class => "pull-left" %></br>
            <%= f.password_field :password, autocomplete: "off", :class => "form-control dev" %>
          </div>
        </div>
        <div class = "col-md-6">  
          <div class="field">
            <%= f.label :password_confirmation, "Password: (for confirmation)", :class => "pull-left" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control dev" %>
          </div>
        </div>
      </div>
    </br>
      <div class="actions">
        <%= f.submit "Register", :class => "btn-reg pull-right" %>
      </div>
    </br>
    <% end %>
  </center>
  </div>
  </center>
</br>